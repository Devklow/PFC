<!DOCTYPE html>
<html>
    <head>
            <meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="{{asset('node_modules/bootstrap/dist/js/bootstrap.bundle.js')}}"></script>
    <link rel="stylesheet" href="{{asset('node_modules/bootstrap/dist/css/bootstrap.css')}}">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href={{asset('ressources/logo.png')}}>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
  <a class="navbar-brand" href= {{url('app_index')}}><img src={{asset('ressources/logo.png')}} alt="icon" width="12%"/></a>
  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto">
        {% if app.user %}
                <li class="nav-item">
                <a class="nav-link disabled">Connected as</a>
            </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{ app.user.username }}
                    </a>
                    <div class="dropdown-menu bg-secondary" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/profil/{{ app.user.username }}">Stats</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href={{path('app_logout')}}>Logout</a>
                    </div>
                </li>
        {% else %}
        <li class="nav-item">
            <a class="nav-link" href={{path('app_register')}}>Sign Up</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href={{path('app_login')}}>Sign In</a>
        </li>
    {% endif %}
        </ul>
    </div>
</nav>
    <body>
    <div class="container-fluid bg-dark text-light" style="height: 90vh; min-height:42em;">
        {% block body %}{% endblock %}
    </div>
    </body>
</html>
